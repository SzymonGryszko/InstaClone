<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.instaclone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/insta_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.RegisterScreen"></activity>
        <activity android:name=".login.LoginScreen" />
        <activity android:name=".profile.EditProfileActivity" />
        <activity android:name=".profile.TaggedPicturesFragment" />
        <activity android:name=".profile.MyPicturesFragment" />
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".alert.AlertActivity" />
        <activity android:name=".plus.PlusActivity" />
        <activity android:name=".search.SearchActivity" />
        <activity android:name=".home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>